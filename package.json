{
    "name": "todo-serverless",
    "version": "1.0.0",
    "description": "This project generated using serverless node generator",
    "author": "Naeem",
    "main": "src/index.js",
    "private": false,
    "license": "MIT",
    "engines": {
        "node": ">=10",
        "yarn": "*"
    },
    "scripts": {
        "dev": "AWS_PROFILE=arsal IS_OFFLINE_MODE=true nodemon node_modules/.bin/sls offline start --noTimeout",        
        "deploy": "node_modules/.bin/sls deploy",
        "lint": "eslint '**/*.js' --ignore-path .gitignore --ignore-pattern internals/scripts",
        "lint:fix": "yarn lint -- --fix",        
        "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles --coverage --testPathPattern=\"(/src/.*)\\.(spec).js$\" --passWithNoTests"
    },
    "keywords": [
        "serverless",
        "node",
        "node.js",
        "es6",
        "es7",
        "es8",
        "es2017",
        "todo-serverless",
        "eslint",
        "REST",
        "API",
        "boilerplate",
        "generator",
        "starter project",
        "aws"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/naeemark/todo-serverless.git"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn validate"
        }
    },
    "_moduleAliases": {
        "@app": "src",
        "@config": "src/config",
        "@middlewares": "src/middlewares",
        "@services": "src/services",
        "@utils": "src/utils"
    },
    "dependencies": {
        "@astro-my/aim-sdk": "^1.0.5",
        "@hapi/joi": "^15.0.3",
        "aws-sdk": "^2.477.0",
        "aws-xray-sdk": "^2.3.3",
        "cross-env": "^5.2.0",
        "crypto-js": "^4.0.0",
        "dotenv": "^8.0.0",
        "dotenv-safe": "^6.1.0",
        "es-class": "^2.1.1",
        "http-status": "^1.3.2",
        "jsonwebtoken": "^8.5.1",
        "lambda-log": "^2.3.0",
        "lodash": "^4.17.11",
        "middy": "^0.27.0",
        "module-alias": "^2.0.6",
        "node-sanitizer": "^1.0.5",
        "serverless-plugin-tracing": "^2.0.0"
    },
    "devDependencies": {
        "@types/jest": "^24.0.15",
        "aws-event-mocks": "^0.0.0",
        "eslint": "^5.16.0",
        "eslint-config-astro": "^1.0.8",
        "eslint-import-resolver-module-alias": "^0.1.0",
        "eslint-plugin-import": "^2.17.3",
        "jest": "^26.1.0",
        "jest-express": "^1.10.1",
        "jest-extended": "^0.11.2",
        "jest-tobetype": "^1.2.3",
        "mock-express-request": "^0.2.2",
        "mock-express-response": "^0.3.0",
        "nodemon": "^2.0.20",
        "prettier-eslint": "^9.0.0",
        "serverless": "^3.25.1",
        "serverless-offline": "^12.0.2",
        "supertest": "^6.3.3"
    },
    "jest": {
        "moduleNameMapper": {
            "^@app(.*)$": "<rootDir>/src$1",
            "^@boot(.*)$": "<rootDir>/src/boot$1",
            "^@config(.*)$": "<rootDir>/src/config$1",
            "^@api(.*)$": "<rootDir>/src/api$1",
            "^@middlewares(.*)$": "<rootDir>/src/middlewares$1",
            "^@models(.*)$": "<rootDir>/src/models$1",
            "^@services(.*)$": "<rootDir>/src/services$1",
            "^@utils(.*)$": "<rootDir>/src/utils$1",
            "^@repos(.*)$": "<rootDir>/src/repositories$1"
        },
        "setupFilesAfterEnv": [
            "jest-extended"
        ],
        "testEnvironment": "node",
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        }
    }
}
